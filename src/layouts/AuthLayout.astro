---
import Layout from "./Layout.astro";

const { title = "HealthyMeal" } = Astro.props;
---

<Layout title={title}>
  <div class="flex flex-1 flex-col items-center justify-center bg-muted/20 px-4 py-16">
    <div class="flex w-full max-w-md flex-col gap-8">
      <div class="flex flex-col items-center gap-2 text-center">
        <a href="/" class="flex items-center gap-2 text-foreground transition-colors hover:text-primary">
          <span class="text-lg font-semibold tracking-tight">HealthyMeal</span>
        </a>
        <p class="text-sm text-muted-foreground">Planuj zdrowe posiłki każdego dnia.</p>
      </div>

      <slot />
    </div>
  </div>
</Layout>
